<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".StartQuestionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/border"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/score_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/score"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_score_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_0"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/timer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/timer"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/nbr_question_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/numquestion"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:text="@string/mon_fragmeent"
            android:textSize="24sp" />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/radioGroupe"
            android:gravity="center_horizontal">

            <RadioButton
                android:id="@+id/radioButton_reponse1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:layout_weight="1"

                android:text=""
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/radioButton_reponse2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:text=""
                android:button="@null"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/radioButton_reponse3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text=""
                android:layout_weight="1"
                android:button="@null"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/radioButton_reponse4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:text=""
                android:button="@null"
                android:textSize="24sp" />

        </RadioGroup>
    </LinearLayout>

</LinearLayout>